
.eyebrow
  font 85% 700 uppercase 1px
  mt 1em

.h1-narrow h1
  max-width 12em

article
  font 1.1em 1.6

  > img, figure
    mb 1em

  h1
    font-size calc(1.3em + 2vw)
    mb .2em

    + p
      font-size calc(1em + .4vw)

  em
    font-style normal
    font 550

  > p strong, > li strong
    font-style italic
    font-weight 400

  > h2
    font-size calc(1.1em + .5vw)
    mt 3em

  > h3
    font 1.07em
    mt 3em

    a:before
      color $gray-300

  > h4
    m 2em 0 .7em
    font 100%

  h3 code
    relative -.1em
    font 115% $main-600

h2 + ul
  pl 0
  mt 1em
  li
    mb .5em

.small
  font 85% $gray

.taller
  m 2em 0
  block

.tall
  m 3em 0
  block

.bordered img
  border 1px solid $gray-300
  padding 2em
  radius 5px

.clickable img:hover
  box-shadow 0 0 0 2px $main

@xlarge
  .wide
    m 2em -7em 0 0
    block
    img
      max-width calc(100% + 7em)

@small-
  pre
    overflow-x scroll

.cols
  gap 2em
  > *
    flex 1
    mb 2em
  img
    mb 1em

  @small
    display flex
